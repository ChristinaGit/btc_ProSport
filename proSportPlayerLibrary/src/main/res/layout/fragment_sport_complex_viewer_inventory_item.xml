<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/sport_complex_inventory_hint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/sport_complex_viewer_inventory_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/sport_complex_inventory_chargeable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sport_complex_inventory_hint"
        tools:text="@string/sport_complex_viewer_inventory_chargeable"/>

    <TextView
        android:id="@+id/sport_complex_inventory_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sport_complex_inventory_chargeable"
        tools:text="Inventory description, Inventory description, Inventory description, Inventory description, Inventory description, Inventory description"/>
</android.support.constraint.ConstraintLayout>